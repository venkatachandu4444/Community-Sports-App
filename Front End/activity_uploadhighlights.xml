<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_black_gradient">

    <!-- BACK -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_back"
        android:tint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- TITLE -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Highlight Videos"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CLEAR -->
    <TextView
        android:id="@+id/tvClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:textColor="#FF7A2F"
        android:textSize="14sp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- UPLOAD VIDEO CARD -->
    <LinearLayout
        android:id="@+id/uploadVideoCard"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_dashed_upload_orange"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_upload_cloud"
            android:tint="#FF7A2F"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Video File"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MP4, MOV up to 50MB"
            android:textColor="#AAAAAA"
            android:textSize="13sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- VIDEO CARD -->
    <LinearLayout
        android:id="@+id/videoCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/bg_card_dark"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/uploadVideoCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- VIDEO HEADER -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIDEO 1"
                android:textColor="#BBBBBB"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_delete"
                android:tint="#AAAAAA"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <!-- VIDEO PREVIEW (UPLOAD TARGET) -->
        <FrameLayout
            android:id="@+id/videoPreview"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_video_placeholder">

            <!-- VideoView for actual video preview -->
            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

            <!-- Placeholder (shown when no video) -->
            <ImageView
                android:id="@+id/ivPlayIcon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_play_circle"/>

            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:padding="6dp"
                android:background="@drawable/bg_time_badge"
                android:layout_gravity="bottom|end"
                android:layout_margin="10dp"/>
        </FrameLayout>

        <!-- VIDEO TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video Title"
            android:textColor="#BBBBBB"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etVideoTitle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="e.g. Stunning Catch at Mid-wicket"
            android:textColor="#FFFFFF"
            android:textColorHint="#777777"
            android:background="@drawable/bg_input_dark"
            android:paddingHorizontal="14dp"/>

        <!-- DESCRIPTION -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description (Optional)"
            android:textColor="#BBBBBB"
            android:layout_marginTop="14dp"/>

        <EditText
            android:id="@+id/etVideoDescription"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Brief details about the highlight..."
            android:gravity="top"
            android:textColor="#FFFFFF"
            android:textColorHint="#777777"
            android:background="@drawable/bg_input_dark"
            android:padding="14dp"/>
    </LinearLayout>

    <!-- PUBLISH -->
    <Button
        android:id="@+id/btnPublish"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Publish Highlights  >"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/bg_button_orange"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/videoCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
