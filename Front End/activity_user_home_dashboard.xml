<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B1627">

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/bottomNav"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <!-- Header with Location -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivLocation"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_location"
                app:tint="#FFFFFF"/>

            <TextView
                android:id="@+id/tvCommunityName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Community"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"/>

            <ImageView
                android:id="@+id/ivFavorite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_star"
                app:tint="#FFFFFF"/>
        </LinearLayout>

        <!-- Upcoming Matches Section -->
        <TextView
            android:id="@+id/txtUpcomingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming Matches"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/upcomingMatchesContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/txtUpcomingTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Match 1: Eagles vs Lions -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMatch1"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Background with gradient -->
                    <ImageView
                        android:id="@+id/ivMatch1Banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="#2E7D32"/>

                    <!-- Gradient overlay -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_overlay"/>

                    <!-- Match Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvMatch1Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eagles vs Lions"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:shadowColor="#000000"
                            android:shadowRadius="4"
                            android:shadowDx="2"
                            android:shadowDy="2"/>

                        <TextView
                            android:id="@+id/tvMatch1Time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today, 7:00 PM"
                            android:textColor="#E0E0E0"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:shadowColor="#000000"
                            android:shadowRadius="4"
                            android:shadowDx="2"
                            android:shadowDy="2"/>
                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Match 2: Panthers vs Tigers -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMatch2"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Background -->
                    <ImageView
                        android:id="@+id/ivMatch2Banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="#F5F5F5"/>

                    <!-- Match Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvMatch2Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Panthers vs Tigers"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:shadowColor="#000000"
                            android:shadowRadius="4"
                            android:shadowDx="2"
                            android:shadowDy="2"/>

                        <TextView
                            android:id="@+id/tvMatch2Time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tomorrow, 5:00 PM"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:shadowColor="#000000"
                            android:shadowRadius="4"
                            android:shadowDx="2"
                            android:shadowDy="2"/>
                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Completed Matches Section -->
        <TextView
            android:id="@+id/txtCompletedTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed Matches"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/upcomingMatchesContainer"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCompletedMatch"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#1F2937"
            app:layout_constraintTop_toBottomOf="@id/txtCompletedTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Match Image -->
                <ImageView
                    android:id="@+id/ivCompletedMatchBanner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="#2E7D32"/>

                <!-- Dark gradient overlay -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_dark_overlay"/>

                <!-- Match Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Winner Badge -->
                    <TextView
                        android:id="@+id/tvWinnerBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COMPLETED"
                        android:textColor="#4CAF50"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:background="#1A1A1A"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:layout_marginBottom="8dp"/>

                    <!-- Team Names -->
                    <TextView
                        android:id="@+id/tvCompletedMatchTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Raptors vs Giants"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:shadowColor="#000000"
                        android:shadowRadius="4"
                        android:shadowDx="2"
                        android:shadowDy="2"/>

                    <!-- Winner -->
                    <TextView
                        android:id="@+id/tvCompletedWinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Winner: Raptors"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:shadowColor="#000000"
                        android:shadowRadius="4"
                        android:shadowDx="2"
                        android:shadowDy="2"/>

                    <!-- Match Date -->
                    <TextView
                        android:id="@+id/tvCompletedMatchDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="January 7, 2026"
                        android:textColor="#CCCCCC"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"
                        android:shadowColor="#000000"
                        android:shadowRadius="4"
                        android:shadowDx="2"
                        android:shadowDy="2"/>
                </LinearLayout>

                <!-- Arrow Icon -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#FFFFFF"/>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Latest Highlights Section -->
        <TextView
            android:id="@+id/txtHighlightsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latest Highlights"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardCompletedMatch"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/highlightsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/txtHighlightsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Highlight 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHighlight1"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#1F2937"
                app:cardElevation="2dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Thumbnail background -->
                    <ImageView
                        android:id="@+id/ivHighlight1Thumb"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="#2E7D32"/>

                    <!-- Play Button -->
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_play"
                        android:background="@drawable/bg_icon"
                        android:padding="12dp"
                        app:tint="#FFFFFF"/>

                    <!-- Title -->
                    <TextView
                        android:id="@+id/tvHighlight1Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="Last Minute Winner!"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:padding="12dp"
                        android:background="@drawable/gradient_overlay"/>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Highlight 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHighlight2"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#1F2937"
                app:cardElevation="2dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Thumbnail background -->
                    <ImageView
                        android:id="@+id/ivHighlight2Thumb"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="#374151"/>

                    <!-- Play Button -->
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_play"
                        android:background="@drawable/bg_icon"
                        android:padding="12dp"
                        app:tint="#FFFFFF"/>

                    <!-- Title -->
                    <TextView
                        android:id="@+id/tvHighlight2Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="Top 5 Plays of the Week"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:padding="12dp"
                        android:background="@drawable/gradient_overlay"/>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Gallery Preview Section -->
        <TextView
            android:id="@+id/txtGalleryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gallery Preview"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/highlightsContainer"
            app:layout_constraintStart_toStartOf="parent"/>

        <HorizontalScrollView
            android:id="@+id/galleryScrollView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/txtGalleryTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/galleryContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">
                <!-- Gallery images will be added dynamically from highlights -->
            </LinearLayout>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

<!-- Bottom Navigation -->
<LinearLayout
    android:id="@+id/bottomNav"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_alignParentBottom="true"
    android:background="#0F1E34"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/navHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="#3B82F6"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="12sp"
        android:drawableTop="@drawable/ic_home"
        android:drawableTint="#3B82F6"
        android:drawablePadding="4dp"/>

    <TextView
        android:id="@+id/navMatches"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Matches"
        android:textColor="#9CA3AF"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="12sp"
        android:drawableTop="@drawable/ic_matches"
        android:drawableTint="#9CA3AF"
        android:drawablePadding="4dp"/>

    <TextView
        android:id="@+id/navGallery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gallery"
        android:textColor="#9CA3AF"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="12sp"
        android:drawableTop="@drawable/ic_gallery"
        android:drawableTint="#9CA3AF"
        android:drawablePadding="4dp"/>

    <TextView
        android:id="@+id/navResults"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Results"
        android:textColor="#9CA3AF"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="12sp"
        android:drawableTop="@drawable/ic_results"
        android:drawableTint="#9CA3AF"
        android:drawablePadding="4dp"/>

    <TextView
        android:id="@+id/navProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="#9CA3AF"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="12sp"
        android:drawableTop="@drawable/ic_profile"
        android:drawableTint="#9CA3AF"
        android:drawablePadding="4dp"/>

</LinearLayout>

</RelativeLayout>
