<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_brown_gradient">

    <!-- TOP BAR -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:tint="#FFFFFF"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Event Post"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"/>

    <Button
        android:id="@+id/btnPost"
        android:layout_width="72dp"
        android:layout_height="36dp"
        android:text="Post"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:background="@drawable/bg_post_button"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- UPLOAD CARD -->
    <LinearLayout
        android:id="@+id/uploadCard"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_upload_card"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Image Preview (hidden initially) -->
        <ImageView
            android:id="@+id/ivPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone"/>

        <!-- Upload Icon and Text (shown initially) -->
        <LinearLayout
            android:id="@+id/uploadPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_upload"
                android:tint="#B0B0B0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Photo/Video"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add visual media to your event post."
                android:textColor="#B0B0B0"
                android:textSize="13sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- TITLE -->
    <TextView
        android:id="@+id/labelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="#FFFFFF"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/uploadCard"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:hint="Enter event title"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:background="@drawable/bg_input"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/labelTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- DESCRIPTION -->
    <TextView
        android:id="@+id/labelDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="#FFFFFF"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/etTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_margin="20dp"
        android:hint="Add a description..."
        android:gravity="top"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:background="@drawable/bg_input"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/labelDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CATEGORY -->
    <TextView
        android:id="@+id/labelCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textColor="#FFFFFF"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/etDescription"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/labelCategory"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/chipSports"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Sports"
            android:textColor="#000000"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:background="@drawable/bg_chip_selected"/>

        <TextView
            android:id="@+id/chipFestival"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Festival"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_chip"/>

        <TextView
            android:id="@+id/chipAnnouncement"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Announcement"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_chip"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
