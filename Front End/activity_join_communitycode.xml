<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC">

    <!-- Back Button (Text-based) -->
    <TextView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â†"
        android:textSize="22sp"
        android:textColor="#111827"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtTopTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Community"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#111827"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"/>

    <!-- Main Title -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Your Community"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#111827"
        android:layout_marginTop="48dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/txtSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the 6-digit invite code below."
        android:textSize="14sp"
        android:textColor="#6B7280"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="@id/txtTitle"/>

    <!-- Decorative Circle (Simple Border) -->
    <View
        android:id="@+id/circleGuide"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        android:background="#00000000"
        android:alpha="0.1"
        app:layout_constraintTop_toBottomOf="@id/txtSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- OTP Input Boxes -->
    <LinearLayout
        android:id="@+id/otpContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="@id/circleGuide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Repeat 6 times -->
        <EditText
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:gravity="center"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:inputType="number"
            android:maxLength="1"/>

        <EditText
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:inputType="number"
            android:maxLength="1"/>

        <EditText
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:inputType="number"
            android:maxLength="1"/>

        <EditText
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:inputType="number"
            android:maxLength="1"/>

        <EditText
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:inputType="number"
            android:maxLength="1"/>

        <EditText
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:inputType="number"
            android:maxLength="1"/>

    </LinearLayout>

    <!-- Bottom Container -->
    <LinearLayout
        android:id="@+id/bottomArea"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#F9FAFB"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Join Button -->
    <Button
        android:id="@+id/btnJoinCommunity"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Join Community"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2563EB"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
