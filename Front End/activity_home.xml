<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0FDF4"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <!-- Success Icon -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_sports"
        android:tint="#22C55E"
        android:contentDescription="Success"/>

    <!-- Success Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Login Successful!"
        android:textColor="#166534"
        android:textSize="28sp"
        android:textStyle="bold"/>

    <!-- Success Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Welcome to Community Sports App"
        android:textColor="#15803D"
        android:textSize="16sp"/>

    <!-- Confirmation Box -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_social"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✓ Authentication Verified"
            android:textColor="#166534"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="✓ Session Established"
            android:textColor="#166534"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="✓ Ready to Explore"
            android:textColor="#166534"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>
