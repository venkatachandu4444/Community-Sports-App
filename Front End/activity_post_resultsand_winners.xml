<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_black_gradient"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- BACK -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_back"
            android:tint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- TITLE -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post Results"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- SELECT MATCH -->
        <TextView
            android:id="@+id/tvSelectMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Sport"
            android:textColor="#B0B0B0"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"/>

        <RelativeLayout
            android:id="@+id/selectMatchCard"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_margin="20dp"
            android:background="@drawable/bg_input_dark"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvSelectMatch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ivSportIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_bat"
                android:tint="#FF7A2F"/>

            <Spinner
                android:id="@+id/spinnerGame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/ivSportIcon"
                android:layout_marginStart="12dp"
                android:background="@android:color/transparent"
                android:spinnerMode="dropdown"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_dropdown"
                android:tint="#888888"/>
        </RelativeLayout>

        <!-- GAME OUTCOME CARD -->
        <LinearLayout
            android:id="@+id/gameOutcomeCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="6dp"
            android:orientation="vertical"
            android:background="@drawable/bg_card_dark"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/selectMatchCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_calendar"
                    android:tint="#3B82F6"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Game Outcome"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="#2A2A2A"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WINNING TEAM"
                android:textColor="#9A9A9A"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etWinningTeam"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="e.g. Royal Tigers"
                android:textColor="#FFFFFF"
                android:textColorHint="#777777"
                android:background="@drawable/bg_input_dark"
                android:paddingHorizontal="14dp"
                android:layout_marginTop="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RESULT SUMMARY"
                android:textColor="#9A9A9A"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="14dp"/>

            <EditText
                android:id="@+id/etResultSummary"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="e.g. Won by 24 runs"
                android:textColor="#FFFFFF"
                android:textColorHint="#777777"
                android:background="@drawable/bg_input_dark"
                android:paddingHorizontal="14dp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

        <!-- PRIZE WINNERS -->
        <LinearLayout
            android:id="@+id/prizeWinnersCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:background="@drawable/bg_card_dark"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/gameOutcomeCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_trophy"
                    android:tint="#FF7A2F"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prize Winners"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <!-- 1ST -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ†  1ST PRIZE WINNER"
                android:textColor="#FFC107"
                android:textStyle="bold"
                android:layout_marginTop="14dp"/>

            <EditText
                android:id="@+id/et1stPrize"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter Player Name"
                android:textColor="#FFFFFF"
                android:textColorHint="#777777"
                android:background="@drawable/bg_input_dark"
                android:paddingHorizontal="14dp"/>

            <!-- 2ND -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¥ˆ  2ND PRIZE WINNER"
                android:textColor="#C0C0C0"
                android:textStyle="bold"
                android:layout_marginTop="14dp"/>

            <EditText
                android:id="@+id/et2ndPrize"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter Player Name"
                android:textColor="#FFFFFF"
                android:textColorHint="#777777"
                android:background="@drawable/bg_input_dark"
                android:paddingHorizontal="14dp"/>

            <!-- 3RD -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¥‰  3RD PRIZE WINNER"
                android:textColor="#FF7A2F"
                android:textStyle="bold"
                android:layout_marginTop="14dp"/>

            <EditText
                android:id="@+id/et3rdPrize"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter Player Name"
                android:textColor="#FFFFFF"
                android:textColorHint="#777777"
                android:background="@drawable/bg_input_dark"
                android:paddingHorizontal="14dp"/>
        </LinearLayout>

        <!-- RESULT IMAGES -->
        <LinearLayout
            android:id="@+id/resultImagesCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="90dp"
            android:orientation="vertical"
            android:background="@drawable/bg_card_dark"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/prizeWinnersCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Result Images"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Optional"
                    android:textColor="#FF7A2F"
                    android:textSize="12sp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:background="@drawable/bg_optional_badge"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layoutImageUpload"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bg_dashed_upload_blue">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_camera"
                    android:tint="#8FA3BF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap to upload photos"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supports JPG, PNG"
                    android:textColor="#AAAAAA"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- PUBLISH BUTTON -->
        <Button
            android:id="@+id/btnPublishResults"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="â¬†  Publish Results"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/bg_button_orange"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/resultImagesCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
